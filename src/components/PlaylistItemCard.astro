---
import type { Project } from "../lib/data";
import PlayButton from "./PlayButton.astro";
interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<a
  href={`/project/${project.id}`}
  class="playlist-item flex group relative transition-all duration-300 overflow-hidden items-center gap-5 rounded-md shadow-lg hover:shadow-xl outline-none bg-zinc-500/30 hover:bg-zinc-500/50 focus:bg-zinc-500/50"
  data-color={project.color.dark}
  transition:name=`project ${project.id} box`
>
  <div class="h-20 w-20">
    <img
      src={project.cover}
      alt={project.title}
      class="object-cover h-full w-full shadow-[5px_0_30px_0px_rgba(0,0,0,0.3)]"
      transition:name=`project ${project.id} image`
    />
  </div>
  <div class="font-bold block" transition:name=`project ${project.id} title`>
    {project.title}
  </div>
  <div
    class={"absolute right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300"}
    transition:name=`project ${project.id} play`
  >
    <PlayButton />
  </div>
</a>
